generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              Int         @id @default(autoincrement())
  title           String
  slug            String      @unique
  description     String?
  price           Int
  discountedPrice Int? // make use of it later
  category        String?
  image           String // SFI: later make it array
  variants        String[]
  colors          String[]
  label           String? // make use of it
  rating          Float       @default(0)
  isFeatured      Boolean     @default(false)
  OrderItem       OrderItem[] 
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Order {
  id          Int         @id @default(autoincrement())
  name        String
  email       String
  phone       String
  address     String // address + city + state + zipCode 
  totalAmount Int
  status      String      @default("pending") // SFI -> later we'll make use of it
  createdAt   DateTime    @default(now())
  orderItems  OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int     @default(1)
  color     String?
  variant   String?
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              Int      @id @default(autoincrement())
  title           String
  slug            String   @unique
  description     String?
  price           Int
  discountedPrice Int?
  category        String?
  image           String
  // features        String[]
  variants        String[]
  colors          String[]
  label           String?
  isFeatured      Boolean  @default(false)
  orderId         Int?
  Order           Order?   @relation(fields: [orderId], references: [id])
}

model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Order {
  id          Int       @id @default(autoincrement())
  userId      Int
  totalAmount Int
  status      String    @default("pending")
  createdAt   DateTime  @default(now())
  products    Product[]
}



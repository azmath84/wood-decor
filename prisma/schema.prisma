datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}


model User {
  id               Int    @id @default(autoincrement())
  email            String @unique
  password         String
  current_progress Int
  final_goal       Int    @default(400)

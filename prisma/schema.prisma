generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

model Product {
  id              Int      @id @default(autoincrement())
  title           String
  slug            String   @unique
  price           Int
  description     String?
  discountedPrice Int?
  category        String?
  images          String[]
  features        String[]
  colors          String[]
  label           String?
  isFeatured      Boolean  @default(false)
  // Order           Order?   @relation(fields: [orderId], references: [id])
  // orderId         Int?
}

// Admin
model Admin {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

// Orders
model Order {
  id          Int      @id @default(autoincrement())
  userId      Int
  // products    Product[]
  totalAmount Int
  status      String   @default("pending")
  createdAt   DateTime @default(now())
}

